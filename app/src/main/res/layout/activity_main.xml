<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </TextView>
    <TextView
        android:text="Good Morning, Yash"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </TextView>
    <TextView
        android:text="Have a great day Ahead!"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </TextView>
    <TextView
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </TextView>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="8dp"
            app:cardBackgroundColor="#8bf6ff"
            app:cardCornerRadius="25dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Foot"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="95dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Steps"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="">
            </TextView>
            <TextView
                android:id="@+id/footSteps"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="italic"
                android:textSize="20sp">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#aab6fe"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Sleeping"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="true">
            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="95dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Time"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="">
            </TextView>
            <TextView
                android:id="@+id/sleepingTime"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="italic"
                android:textSize="20sp">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </TextView>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="8dp"
            app:cardBackgroundColor="#e57373"
            app:cardCornerRadius="25dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Heart"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="95dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Rate"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/heartRate"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="italic"
                android:textSize="20sp">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#e1ffb1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Training"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="95dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Time"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/trainingTime"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="italic"
                android:textSize="20sp">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>